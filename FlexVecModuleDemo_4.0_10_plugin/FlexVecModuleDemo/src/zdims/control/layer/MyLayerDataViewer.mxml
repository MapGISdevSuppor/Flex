			public function bufferFeature(e:ContextMenuEvent):void
			{
				if(this.bufferControl==null)
				{
					Alert.show("bufferControl属性为NULL,请赋值！","提示");
					return;
				}
				var itemRender:DataGridItemRenderer=e.mouseTarget as DataGridItemRenderer;
